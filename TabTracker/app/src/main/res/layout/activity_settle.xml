<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="alvin.example.com.tabtracker.Settle"
    android:background="#598cbc">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/settle_balance"
        android:id="@+id/settleText"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffff"
        android:textSize="45dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/amount_text"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:textSize="35dp"
        android:paddingTop="10dp"
        android:layout_marginTop="101dp"
        android:layout_below="@+id/settleText"
        android:layout_toLeftOf="@+id/settleText"
        android:layout_toStartOf="@+id/settleText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/amountInput"
        android:gravity="center_vertical|center_horizontal|right"
        android:textSize="35dp"
        android:singleLine="true"
        android:background="#ffffff"
        android:paddingRight="10dp"
        android:inputType="numberDecimal"
        android:layout_alignBottom="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/dollar_sign"
        android:id="@+id/textView2"
        android:textSize="35dp"
        android:paddingLeft="5dp"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:layout_alignBottom="@+id/amountInput"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/memo_text"
        android:id="@+id/textView3"
        android:textColor="#ffffff"
        android:textSize="35dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/amountInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/memoInput"
        android:gravity="center_vertical|right"
        android:textSize="35dp"
        android:singleLine="true"
        android:background="#ffffff"
        android:paddingRight="10dp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/amountInput"
        android:layout_alignStart="@+id/amountInput"
        android:layout_alignRight="@+id/amountInput"
        android:layout_alignEnd="@+id/amountInput" />

    <Button
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:text="@string/submit_button"
        android:id="@+id/button"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:onClick="submit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
